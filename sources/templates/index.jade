html
  meta(name='viewport' content='width=device-width, user-scalable=no')
  base(href='/')

  //- link(rel='stylesheet' href='https://rawgit.com/minimalist-components/mn-image/master/docs/vendor.css')
  //- link(rel='stylesheet' href='https://rawgit.com/minimalist-components/mn-image/master/dist/mn-image.css')
  link(rel='stylesheet' href='docs/vendor.css')
  link(rel='stylesheet' href='dist/mn-image.css')

  style.
    img {
      zoom: 50%;
    }

    mn-image {margin: 1em}

    @media (max-width: 959px) {
      .images {
        margin-top: 80px;
      }
    }
body
  h2 mn-image
  include github-corner

  .layout-fullscreen.layout-centered
    .layout-column.layout-md-row.images
      a(href='#'): mn-image(src='http://15858-presscdn-0-65.pagely.netdna-cdn.com/wp-content/uploads/sites/default/files/images/19bigstockKoalaBearsleepinginatree15688901jpg.jpg')
      a(href='#'): mn-image(src='https://s-media-cache-ak0.pinimg.com/originals/90/23/ce/9023ce4196add2eb853627bbc53b272a.jpg')
      a(href='#'): mn-image(src='http://66.media.tumblr.com/46179d3ef5b19665e5f1274bb0d84087/tumblr_o4zk6mEISo1qi4ucgo1_1280.jpg')

  script.
    var images = document.querySelectorAll('mn-image')
    Array
      .from(images)
      .forEach(disableClick)

    function disableClick(image) {
      image.addEventListener('click', function(event) {
        event.preventDefault()
      })
    }
  
